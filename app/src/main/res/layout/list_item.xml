<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/typical_padding"
    android:paddingLeft="@dimen/typical_padding"
    android:paddingRight="@dimen/typical_padding"
    android:paddingStart="@dimen/typical_padding"
    android:background="@drawable/border">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/typical_margin"
        android:layout_marginStart="@dimen/typical_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:textColor="@color/authorNameColor"
                android:textSize="@dimen/normal_textSize"
                tools:text="@string/testAuthor" />

            <TextView
                android:id="@+id/sectionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/sectionNameColor"
                android:textStyle="italic"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="@dimen/normal_textSize"
                android:gravity="right"
                tools:text="@string/testSectionName" />
        </LinearLayout>

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/bigger_textSize"
            tools:text="@string/testArticletitle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/typical_margin"
        android:layout_marginStart="@dimen/typical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/dateColor"
            android:textSize="@dimen/normal_textSize"
            tools:text="@string/testDate" />

    </LinearLayout>

</LinearLayout >
